@model MVC.Models.mvcOderModel
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ORDERID)
        <div class="form-group">
            @Html.LabelFor(model => model.ORDERNAME)
            @Html.EditorFor(model => model.ORDERNAME)
            @Html.ValidationMessageFor(model => model.ORDERNAME)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ITEMS)
            @Html.EditorFor(model => model.ITEMS)
            @Html.ValidationMessageFor(model => model.ITEMS)
        </div>
        <div class="form-group">
            <input type="submit"  value="Submit" class="btn button" />
            <input type="reset"  value="Reset" class="btn button" />
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }